    double targetWeight;
    double targetBiceps;
    int activityLevel;
    int workoutLevel; // 1-Beginner, 2-Intermediate, 3-Advanced
    string goal;
};

const string USERS_FILE = "users.txt";
const string LOGS_FILE_PREFIX = "logs_";

// ---------------- UI HELPERS ----------------
void line() {
    cout << "===========================================\n";
